<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marine.connexapp.PrincipalActivity">
    <Button
        android:id="@+id/actualites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualités"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />
    <Button
        android:id="@+id/commerces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commerces"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimaryDark"/>
    <Button
        android:id="@+id/reseaux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Réseaux Sociaux"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />
    <Button
        android:id="@+id/pub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publicités"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
