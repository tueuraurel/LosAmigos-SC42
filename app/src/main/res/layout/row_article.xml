<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView android:id="@+id/titre" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:textColor="@android:color/black" android:textStyle="bold" android:textSize="15sp" tools:text="Pas de titre"/>
    <TextView android:id="@+id/auteur" android:layout_below="@+id/titre" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/black" android:textStyle="italic" android:textSize="10sp" tools:text="Anonyme"/>
    <TextView android:id="@+id/description" android:layout_below="@+id/auteur" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/black" android:textSize="13sp" tools:text="Pas de description" />
</RelativeLayout>