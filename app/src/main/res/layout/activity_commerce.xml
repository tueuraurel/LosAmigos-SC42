<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommerceActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/infosCommerce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_commerce"/>
    
    <TextView
        android:id="@+id/nomCommerce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/voirOffresCommerce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voirOffresCommerce"/>

    <Button
        android:id="@+id/favoriCommerce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Favori"/>

</LinearLayout>