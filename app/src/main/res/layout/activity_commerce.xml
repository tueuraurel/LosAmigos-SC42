<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommerceActivity"
    android:background="@color/partieCommerce">

    <TextView
        android:id="@+id/infosCommerce"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_toStartOf="@id/imageCommerce"
        android:textAlignment="center"
        android:text="@string/info_commerce" />

    <ImageView
        android:id="@+id/imageCommerce"
        android:layout_width="178dp"
        android:layout_height="168dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="0dp"
        app:srcCompat="@drawable/ic_shopping_cart_black_24dp" />

    <TextView
        android:id="@+id/nomCommerce"
        android:layout_toStartOf="@id/imageCommerce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infosCommerce"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:text="Nom du commerce" />

    <Button
        android:id="@+id/voirMap"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/imageCommerce"
        android:layout_below="@+id/nomCommerce"
        android:text="@string/voirMap" />

    <TextView
        android:id="@+id/descriptionCommerce"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageCommerce"
        android:textSize="15sp"
        tools:text="Description du commerce" />


    <TextView
        android:id="@+id/adresse"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/descriptionCommerce"
        android:minHeight="50dp"
        tools:text="Adresse" />

    <TextView
        android:id="@+id/horaires"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/adresse"
        tools:text="Horaires" />

    <TextView
        android:id="@+id/numeroTelephone"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/horaires"
        android:autoLink="phone"
        tools:text="Numéro de téléphone" />

    <Button
        android:id="@+id/favoriCommerce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/voirOffresCommerce"
        android:layout_centerHorizontal="true"
        tools:text="Favori" />

    <Button
        android:id="@+id/voirOffresCommerce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="@string/voirOffresCommerce" />



</RelativeLayout>