<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonMeteo"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/meteo"
        android:textColor="#FFFF" />

    <Button
        android:id="@+id/buttonAlarme"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:drawableTop="@android:drawable/ic_lock_idle_alarm"
        android:text="@string/alarme"
        android:textColor="#FFFF" />

    <Button
        android:id="@+id/buttonActualite"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/actualite"
        android:textColor="#FFFF"
        tools:drawableTop="@android:drawable/ic_dialog_info" />

    <Button
        android:id="@+id/buttonEtatTrafic"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/etattrafic"
        android:textColor="#FFFF"
        tools:drawableTop="@android:drawable/ic_dialog_map" />

    <Button
        android:id="@+id/buttonAgenda"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/agenda"
        android:textColor="#FFFF"
        tools:drawableTop="@android:drawable/ic_menu_agenda" />

</GridLayout>

